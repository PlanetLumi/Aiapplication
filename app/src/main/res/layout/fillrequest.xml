<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/fillRequest">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please input your request"
        android:textSize="45sp" />

    <EditText
        android:id="@+id/reqDomain"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="-5dp"
        android:gravity="center"
        android:hint="Please enter service domain"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/infoBox"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:layout_below="@id/reqDomain"
        android:layout_marginTop="17dp"
        android:hint="Please input any useful information, such as payment, product etc"
        android:textSize="15sp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoBox"
        android:layout_marginTop="10dp"
        android:text="Generate Request" />
    <Button
        android:id="@+id/exitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:layout_marginTop="10dp"
        android:text="Exit" />
    <TextView
        android:id="@+id/testView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exitButton"
        android:layout_marginTop="10dp"
        android:text="Test"/>



</RelativeLayout>