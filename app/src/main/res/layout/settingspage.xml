<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="@color/greybase"
    android:id="@+id/settings">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Account Settings"
        android:textSize="40sp" />

    <Spinner
        android:id="@+id/stylePalette"
        android:layout_width="409dp"
        android:layout_height="42dp"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="8dp"
        android:prompt="@string/style_palette_prompt" />

    <Switch
        android:id="@+id/permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stylePalette"
        android:checked="true"
        android:gravity="right"
        android:text="Permissions" />

    <Switch
        android:id="@+id/notifications"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/permissions"
        android:layout_marginTop="-28dp"
        android:checked="true"
        android:gravity="right"
        android:text="Notifications" />

    <ImageView
        android:id="@+id/workingHard"
        android:layout_width="401dp"
        android:layout_height="209dp"
        android:layout_below="@id/title"
        android:layout_marginTop="106dp"
        android:src="@drawable/workinghard"
        android:text=""
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="64dp" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="324dp"
        android:layout_below="@+id/workingHard"
        android:layout_alignEnd="@id/exitButton"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="-204dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/savebutton"
        android:text="Save Data" />

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="200dp"
        android:layout_height="324dp"
        android:layout_below="@+id/workingHard"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="-567dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/exitbutton"
        android:text="Exit"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="512dp" />

</RelativeLayout>
